{
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "xo"
  },
  "dependencies": {
    "express": "^4.15.2",
    "font-awesome": "^4.7.0",
    "phaser": "^3.6.0",
    "prettier": "^1.13.5",
    "socket.io": "^1.7.3"
  },
  "devDependencies": {
    "xo": "^0.21.1"
  },
  "xo": {
    "ignores": [
      "js/phaser.min.js"
    ],
    "prettier": true,
    "overrides": [
      {
        "files": "js/*.js",
        "env": [
          "browser"
        ],
        "globals": [
          "io",
          "Phaser"
        ]
      },
      {
        "files": "server/*.js",
        "env": [
          "node"
        ]
      }
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  }
}
